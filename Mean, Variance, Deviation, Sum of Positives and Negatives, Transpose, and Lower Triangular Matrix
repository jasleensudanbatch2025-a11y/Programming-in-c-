#include <stdio.h>
#include <math.h>

int main() {
    int choice;

    while (1) {
        printf("ARRAY OPERATIONS\n");
        printf("1. Mean, Variance, and Deviation\n");
        printf("2. Sum of Positive and Negative Numbers\n");
        printf("3. Transpose of a Matrix\n");
        printf("4. Lower Triangular Matrix\n");
        printf("5. Exit\n");
        printf("Enter your choice: ");
        scanf("%d", &choice);

        switch (choice) {
            case 1: {
                int n, i;
                float arr[100], mean = 0, variance = 0, std_dev;

                printf("Enter number of elements: ");
                scanf("%d", &n);

                printf("Enter %d numbers:\n", n);
                for (i = 0; i < n; i++)
                    scanf("%f", &arr[i]);

                for (i = 0; i < n; i++)
                    mean += arr[i];
                mean /= n;

             
                for (i = 0; i < n; i++)
                    variance += pow(arr[i] - mean, 2);
                variance /= n;

                std_dev = sqrt(variance);
                printf("\nMean = %.2f", mean);
                printf("\nVariance = %.2f", variance);
                printf("\nStandard Deviation = %.2f\n", std_dev);
                break;
            }

            case 2: {
                int n, i, arr[100], pos_sum = 0, neg_sum = 0;

                printf("Enter number of elements: ");
                scanf("%d", &n);

                printf("Enter %d integers:\n", n);
                for (i = 0; i < n; i++) {
                    scanf("%d", &arr[i]);
                    if (arr[i] > 0)
                        pos_sum += arr[i];
                    else
                        neg_sum += arr[i];
                }

                printf("\nSum of Positive Numbers = %d", pos_sum);
                printf("\nSum of Negative Numbers = %d\n", neg_sum);
                break;
            }

            case 3: {
                int a[10][10], transpose[10][10], r, c, i, j;
                printf("Enter rows and columns of matrix: ");
                scanf("%d %d", &r, &c);

                printf("Enter elements of matrix:\n");
                for (i = 0; i < r; i++)
                    for (j = 0; j < c; j++)
                        scanf("%d", &a[i][j]);

                
                for (i = 0; i < r; i++)
                    for (j = 0; j < c; j++)
                        transpose[j][i] = a[i][j];

                printf("\nTranspose of the matrix:\n");
                for (i = 0; i < c; i++) {
                    for (j = 0; j < r; j++)
                        printf("%d ", transpose[i][j]);
                    printf("\n");
                }
                break;
            }

            case 4: {
                int a[10][10], r, c, i, j;
                printf("Enter order of square matrix: ");
                scanf("%d", &r);
                c = r;

                printf("Enter elements of matrix:\n");
                for (i = 0; i < r; i++)
                    for (j = 0; j < c; j++)
                        scanf("%d", &a[i][j]);

                printf("\nLower Triangular Matrix:\n");
                for (i = 0; i < r; i++) {
                    for (j = 0; j < c; j++) {
                        if (i >= j)
                            printf("%d ", a[i][j]);
                        else
                            printf("0 ");
                    }
                    printf("\n");
                }
                break;
            }

            case 5:
                printf("Exiting program... Goodbye!\n");
                return 0;

            default:
                printf("Invalid choice! Please try again.\n");
        }
    }

    return 0;
}
